% Пакет переопределения формата заголовков
\RequirePackage{titlesec}

% Задаем формат заголовков глав
\titleformat{\chapter}[hang]
 {\filcenter\normalfont\Large\bfseries}{\thechapter}{0.2cm}{\Large}

\titlespacing{\chapter}{1pt}{1pt}{8pt}[1pt]
 
\renewcommand{\thechapter}{\arabic{chapter}.}

% Задаем формат заголовков секций
\titleformat{\section}[hang]
 {\filright\normalfont\large\bfseries}{\thesection}{0.2cm}{\large}

\titlespacing{\section}{14pt}{10pt}{14pt}[1pt] 
 
\renewcommand{\thesection}{\arabic{chapter}.\arabic{section}.}

% Задаем формат подсекций
\titleformat{\subsection}[hang]
 {\filright\normalfont\large\bfseries}{\thesubsection}{0.2cm}{\large}
 
\titlespacing{\subsection}{7pt}{10pt}{14pt}[1pt] 

% Переопределяем счетчик подсекций
\renewcommand{\thesubsection}{\arabic{chapter}.\arabic{section}.\arabic{subsection}.}

